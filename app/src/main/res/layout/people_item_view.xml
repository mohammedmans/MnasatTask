<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/profile_path_img"
        app:layout_constraintBottom_toBottomOf="@id/profile_path_img"
        app:layout_constraintStart_toStartOf="@id/profile_path_img"
        app:layout_constraintEnd_toEndOf="@id/profile_path_img"/>
    <ImageView
        android:id="@+id/profile_path_img"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/peo_name_tv"
        android:layout_width="0dp"
        android:gravity="center"
        android:textColor="#FFF"
        android:padding="8dp"
        android:layout_height="wrap_content"
        android:background="#55000000"
        android:hint="people name"
        app:layout_constraintBottom_toBottomOf="@id/profile_path_img"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</android.support.constraint.ConstraintLayout>